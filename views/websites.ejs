  <body>
    <header>
      <div id="logo" class="container-fluid"><img src="./assets/1x/logo.png" alt="keyboard visual with padlock graphics"></div>

      <nav id="mainnav" class="container-fluid">
        <button type="submit" class="nav_button">REGISTER</button>
        <button type="submit" class="nav_button">LOGIN</button>
      </nav>
    </header>

    <main>
      <div id="hero"><img src="./assets/1397.jpg" alt=""></div>


          <form id='generate-password'>
            <h4>Create your new password here:</h4>
            <div class="form-row">
              <label>How long will your password be?</label>
              <input type="number" class='length' name='length' placeholder ="length of password">
            </div>
            <input type='checkbox' class='number' name='number'>
            <label for=number> Need number? </label>
            <input type='checkbox' class='lowercase' name='lowercase'>
            <label for=lowercase> Need lowercase? </label>
            <input type='checkbox' class='uppercase' name='uppercase'>
            <label for=uppercase> Need uppercase? </label>
            <input type='checkbox' class='special-characters' name='special-characters'>
            <label for=special-characters> Need Special Characters? </label>

            <button type="submit"> New Password! </button>
            <br>
            <br>
            <h5>You're new password is: </h5>
            <output name="new-password" class="password"></output>
          </form>


          <script type="text/javascript" src="/scripts/helper.js"></script>
          <script type="text/javascript" src="/scripts/client.js"></script>
    </main>
